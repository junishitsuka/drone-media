<div id="content" class="container">
  <div class="row" role="main" >
    <div class="col-lg-12">
      <article id="post-11" class="post-11 page type-page status-publish hentry">
        <h1 id="post-title">空撮比較.com</h1>
        <h2>人気の空撮会社をご紹介</h2>
        <div class="main-form">
          <form action="/index.php/pref/" method="POST">
            <div class="form-header">
              <p class="message">わずか１分で資料を一括請求</p>
              <%= render :partial => "steps", :locals => { step: 1 } %>
            </div>
            <div class="form-body">
              <p class="purpose"><b>撮影目的は何ですか？</b></p>
              <% Purpose.all.each do |purpose| %>
              <div class="box-input"><input type="checkbox" name="purpose[]" id="<%= purpose.id %>" value="<%= purpose.id %>"><label for="<%= purpose.id %>"><%= purpose.name %></label></div>
              <% end %>
            </div>
            <div style="text-align: center;" class="form-footer">
              <button type="submit">
                次のSTEPへ&nbsp;<i class="glyphicon glyphicon-play"></i>
              </button>
            </div>
          </form>
        </div>
      </article>
    </div>
  </div>
</div>
